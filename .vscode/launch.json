{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach using Process Id",
            "type": "debugpy",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Start conversation",
            "request": "launch",
            "type": "debugpy",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/startConversation.py",
        },
        {
            "name": "Look for more quotes",
            "request": "launch",
            "type": "debugpy",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/startLookingForMoreQuotes.py",
        }
    ]
}